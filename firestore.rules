rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users: Authenticated users can read/write their own document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // --- FRIENDS SYSTEM RULES ---

    // 1. Invites: Authenticated users can create & read invites
    match /invites/{inviteCode} {
      // Allow reading invites (needed to validate code)
      allow read: if request.auth != null;
      
      // Allow creating invite if you are the inviter
      allow create: if request.auth != null && request.resource.data.inviterId == request.auth.uid;
      
      // Allow updating (e.g. usage count)
      allow update: if request.auth != null; 
    }

    // 2. Friendships: Users can handle their own connections
    match /friendships/{friendshipId} {
      // Allow reading if you are one of the participants
      allow read: if request.auth != null && request.auth.uid in resource.data.users;
      
      // Allow creating a friendship (Sending a request)
      // Check that the authenticated user is in the 'users' array
      allow create: if request.auth != null && request.auth.uid in request.resource.data.users;
      
      // Allow updating (Accepting/Blocking)
      allow update: if request.auth != null && request.auth.uid in resource.data.users;
    }
  }
}
